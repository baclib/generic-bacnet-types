{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://baclib.github.io/schemas/if-limitable.json",
    "title": "BAClib If-Limitable Applicator",
    "description": "Conditional schema that applies constraints based on the base type. Supports range constraints for unsigned/enumerated, min/max for signed/float/double, and length constraints for octetstring/charstring/bitstring.",
    "allOf": [
        {
            "if": {
                "properties": {
                    "base": {
                        "enum": [
                            "unsigned",
                            "enumerated"
                        ]
                    }
                }
            },
            "then": {
                "properties": {
                    "range": {
                        "$ref": "./reuse-non-negative-integer-range.json"
                    }
                }
            }
        },
        {
            "if": {
                "properties": {
                    "base": {
                        "const": "signed"
                    }
                }
            },
            "then": {
                "properties": {
                    "minimum": {
                        "type": "integer"
                    },
                    "maximum": {
                        "type": "integer"
                    }
                },
                "$ref": "#/$defs/any-of-properties"
            }
        },
        {
            "if": {
                "properties": {
                    "base": {
                        "enum": [
                            "float",
                            "double"
                        ]
                    }
                }
            },
            "then": {
                "properties": {
                    "minimum": {
                        "type": "number"
                    },
                    "maximum": {
                        "type": "number"
                    }
                },
                "$ref": "#/$defs/any-of-properties"
            }
        },
        {
            "if": {
                "properties": {
                    "base": {
                        "enum": [
                            "octetstring",
                            "charstring",
                            "bitstring"
                        ]
                    }
                }
            },
            "then": {
                "properties": {
                    "length": {
                        "$ref": "./reuse-non-negative-integer-length.json"
                    }
                }
            }
        }
    ],
    "$defs": {
        "any-of-properties": {
            "anyOf": [
                {
                    "required": [
                        "minimum"
                    ]
                },
                {
                    "required": [
                        "maximum"
                    ]
                }
            ],
            "unevaluatedProperties": false
        }
    }
}