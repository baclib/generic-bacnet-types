{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://baclib.github.io/schemas/if-choice.json",
    "title": "BAClib If-Choice Applicator",
    "description": "Conditional schema that applies when the base type is 'choice'. Defines the 'options' property which contains at least two named options, each with a unique context number and type.",
    "type": "object",
    "if": {
        "properties": {
            "base": {
                "const": "choice"
            }
        }
    },
    "then": {
        "properties": {
            "options": {
                "type": "array",
                "description": "An array of possible options for this choice.",
                "minItems": 2,
                "items": {
                    "type": "object",
                    "properties": {
                        "alias": {
                            "type": "string",
                            "description": "An optional unique alias for the option."
                        },
                        "name": {
                            "type": "string",
                            "description": "The unique name of the option."
                        },
                        "context": {
                            "type": "integer",
                            "minimum": 0,
                            "description": "The context number of the option. Must be unique within the set."
                        },
                        "description": {
                            "type": "string",
                            "description": "An optional human-readable description for the option."
                        },
                        "type": {
                            "description": "The type of the choice option, either a type name or a reference to type traits.",
                            "oneOf": [
                                {
                                    "$ref": "./type-name.json"
                                },
                                {
                                    "$ref": "./type-traits.json"
                                }
                            ]
                        }
                    },
                    "required": [
                        "name",
                        "type"
                    ],
                    "additionalProperties": false
                }
            }
        },
        "required": [
            "options"
        ]
    }
}