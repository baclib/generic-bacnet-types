{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://baclib.github.io/bitstring-type.json",
    "title": "Bit String Type",
    "description": "Defines a BACnet Bit String type with a set of named bits, each assigned to a unique zero-based position.",
    "allOf": [
        { "$ref": "./common-type.json" },
        {
            "type": "object",
            "properties": {
                "base": {
                    "const": "bitstring",
                    "description": "The base type. Must always be 'bitstring' for this schema."
                },
                "length": {
                    "$ref": "./length-constraint.json",
                    "description": "Optional length constraint for the bit string type."
                },
                "bits": {
                    "type": "array",
                    "description": "Array of bit elements. Each entry must have a unique name and a zero-based position.",
                    "items": {
                        "type": "object",
                        "properties": {
                            "alias": {
                                "type": "string",
                                "description": "An optional unique alias for the bit element."
                            },
                            "name": {
                                "type": "string",
                                "description": "The unique name of the bit element."
                            },
                            "description": {
                                "type": "string",
                                "description": "An optional human-readable description for the bit element."
                            },
                            "position": {
                                "type": "integer",
                                "minimum": 0,
                                "description": "Zero-based position of the bit element. Must be unique within the set."
                            }
                        },
                        "required": ["name", "position"]
                    }
                }
            },
            "additionalProperties": false
        }
    ],
    "examples": [
        {
            "base": "bitstring",
            "bits": [
                { "name": "alarm", "position": 0 },
                { "name": "fault", "position": 1 }
            ]
        },
        {
            "base": "bitstring",
            "range": { "minimum": 0, "maximum": 7 },
            "bits": [
                { "name": "active", "position": 0 },
                { "name": "inactive", "position": 1 }
            ]
        }
    ]
}