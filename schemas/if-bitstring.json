{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://baclib.github.io/if-bitstring.json",
    "title": "BAClib If-Bitstring Applicator",
    "type": "object",
    "if": {
        "properties": {
            "base": {
                "const": "bitstring"
            }
        }
    },
    "then": {
        "properties": {
            "bits": {
                "type": "array",
                "description": "Array of bit elements. Each entry must have a unique name and a zero-based position.",
                "items": {
                    "type": "object",
                    "properties": {
                        "alias": {
                            "type": "string",
                            "description": "An optional unique alias for the bit element."
                        },
                        "name": {
                            "type": "string",
                            "description": "The unique name of the bit element."
                        },
                        "description": {
                            "type": "string",
                            "description": "An optional human-readable description for the bit element."
                        },
                        "position": {
                            "type": "integer",
                            "minimum": 0,
                            "description": "Zero-based position of the bit element. Must be unique within the set."
                        }
                    },
                    "required": [
                        "name",
                        "position"
                    ],
                    "additionalProperties": false
                }
            }
        }
    }
}