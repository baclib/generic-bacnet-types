{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://baclib.github.io/schemas/type-definition.json",
    "title": "BAClib Type Definition",
    "description": "This schema defines a top-level BAClib data type. Types defined here can be referenced and reused in other schemas.",
    "type": "object",
    "properties": {
        "alias": {
            "type": "string",
            "description": "An optional alternative name for the type."
        },
        "name": {
            "$ref": "./type-name.json",
            "description": "The unique name of the type being defined."
        },
        "description": {
            "type": "string",
            "description": "A human-readable description of the type."
        },
        "type": {
            "$ref": "./type-reference.json",
            "description": "A reference to a type, either as a type name or as a set of type traits."
        }
    },
    "required": [
        "name"
    ],
    "if": {
        "properties": {
            "name": {
                "enum": [
                    "null",
                    "boolean",
                    "unsigned",
                    "integer",
                    "real",
                    "double",
                    "octet-string",
                    "character-string",
                    "bit-string",
                    "enumerated",
                    "date-pattern",
                    "time-pattern",
                    "object-identifier",
                    "any",
                    "choice",
                    "struct"
                ]
            }
        }
    },
    "then": {
        "type": "object",
        "properties": {
            "type": {
                "not": {}
            }
        }
    },
    "else": {
        "type": "object",
        "required": [
            "type"
        ]
    },
    "additionalProperties": false
}