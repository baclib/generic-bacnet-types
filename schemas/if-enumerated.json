{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://baclib.github.io/schemas/if-enumerated.json",
    "title": "BAClib If-Enumerated Applicator",
    "description": "Conditional schema that applies when the base type is 'enumerated'. Defines the 'values' property which contains named enumerated values, each with a unique non-negative integer constant.",
    "type": "object",
    "if": {
        "properties": {
            "base": {
                "const": "enumerated"
            }
        }
    },
    "then": {
        "properties": {
            "values": {
                "type": "array",
                "minItems": 1,
                "items": {
                    "type": "object",
                    "properties": {
                        "alias": {
                            "type": "string",
                            "description": "An optional unique alias for the enumerated value."
                        },
                        "name": {
                            "type": "string",
                            "description": "The unique name of the enumerated value."
                        },
                        "description": {
                            "type": "string",
                            "description": "An optional human-readable description for the enumerated value."
                        },
                        "constant": {
                            "type": "integer",
                            "minimum": 0,
                            "description": "The unique integer constant assigned to this enumerated value."
                        }
                    },
                    "required": [
                        "name",
                        "constant"
                    ],
                    "additionalProperties": false
                }
            }
        }
    }
}