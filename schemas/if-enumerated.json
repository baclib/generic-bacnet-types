{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://baclib.github.io/if-enumerated.json",
    "title": "BAClib If-Enumerated Applicator",
    "type": "object",
    "if": {
        "properties": {
            "base": {
                "const": "enumerated"
            }
        }
    },
    "then": {
        "properties": {
            "values": {
                "type": "array",
                "minItems": 1,
                "items": {
                    "type": "object",
                    "properties": {
                        "alias": {
                            "type": "string",
                            "description": "An optional unique alias for the enumerated value."
                        },
                        "name": {
                            "type": "string",
                            "description": "The unique name of the enumerated value."
                        },
                        "description": {
                            "type": "string",
                            "description": "An optional human-readable description for the enumerated value."
                        },
                        "constant": {
                            "type": "integer",
                            "minimum": 0,
                            "description": "The unique integer constant assigned to this enumerated value."
                        }
                    },
                    "required": [
                        "name",
                        "constant"
                    ],
                    "additionalProperties": false
                }
            },
            "extensible": {
                "type": "boolean",
                "description": "Indicates whether the enumerated type is extensible, allowing for additional values beyond those explicitly defined."
            },
            "range": {
                "description": "Optional range constraint.",
                "properties": {
                    "minimum": {
                        "type": "integer",
                        "minimum": 0
                    },
                    "maximum": {
                        "type": "integer",
                        "minimum": 0
                    }
                },
                "required": [
                    "minimum",
                    "maximum"
                ],
                "additionalProperties": false
            },
            "ranges": {
                "type": "array",
                "description": "Optional array of ranges defining valid value segments for the enumerated type.",
                "items": {
                    "type": "object",
                    "properties": {
                        "custom": {
                            "type": "boolean",
                            "description": "Indicates if this range is for custom (user-defined) values."
                        },
                        "minimum": {
                            "type": "integer",
                            "minimum": 0,
                            "description": "The minimum value of the range (inclusive)."
                        },
                        "maximum": {
                            "type": "integer",
                            "minimum": 0,
                            "description": "The maximum value of the range (inclusive)."
                        }
                    },
                    "required": [
                        "custom",
                        "minimum",
                        "maximum"
                    ]
                }
            }
        }
    }
}