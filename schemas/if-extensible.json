{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://baclib.github.io/schemas/if-extensible.json",
    "title": "BAClib If-Extensible Applicator",
    "description": "Conditional schema that applies when the base type is 'bitstring', 'enumerated', or 'choice'. Defines properties for extensibility including the 'extensible' flag, valid value ranges, and custom value ranges.",
    "type": "object",
    "if": {
        "properties": {
            "base": {
                "enum": [
                    "bitstring",
                    "enumerated",
                    "choice"
                ]
            }
        }
    },
    "then": {
        "properties": {
            "extensible": {
                "type": "boolean",
                "description": "Indicates whether the enumerated type is extensible, allowing for additional values beyond those explicitly defined."
            },
            "range": {
                "$ref": "./reuse-non-negative-integer-range.json"
            },
            "ranges": {
                "type": "array",
                "description": "Optional array of ranges defining valid value segments for the enumerated type.",
                "items": {
                    "type": "object",
                    "properties": {
                        "custom": {
                            "type": "boolean",
                            "description": "Indicates if this range is for custom (user-defined) values."
                        },
                        "minimum": {
                            "type": "integer",
                            "minimum": 0,
                            "description": "The minimum value of the range (inclusive)."
                        },
                        "maximum": {
                            "type": "integer",
                            "minimum": 0,
                            "description": "The maximum value of the range (inclusive)."
                        }
                    },
                    "required": [
                        "custom",
                        "minimum",
                        "maximum"
                    ],
                    "additionalProperties": false
                }
            },
            "proprietary": {
                "description": "Defines the range(s) of values reserved for proprietary use.",
                "oneOf": [
                    {
                        "type": "object",
                        "properties": {
                            "from": {
                                "type": "integer",
                                "minimum": 0,
                                "description": "The starting value of the proprietary range (inclusive)."
                            },
                            "to": {
                                "type": "integer",
                                "minimum": 0,
                                "description": "The ending value of the proprietary range (inclusive)."
                            }
                        },
                        "required": ["from", "to"],
                        "additionalProperties": false
                    },
                    {
                        "type": "array",
                        "description": "Array of proprietary ranges.",
                        "items": {
                            "type": "object",
                            "properties": {
                                "from": {
                                    "type": "integer",
                                    "minimum": 0,
                                    "description": "The starting value of the proprietary range (inclusive)."
                                },
                                "to": {
                                    "type": "integer",
                                    "minimum": 0,
                                    "description": "The ending value of the proprietary range (inclusive)."
                                }
                            },
                            "required": ["from", "to"],
                            "additionalProperties": false
                        }
                    }
                ]
            },
            "maximum": {
                "type": "integer",
                "minimum": 0,
                "description": "The maximum value allowed for this type."
            }
        }
    }
}