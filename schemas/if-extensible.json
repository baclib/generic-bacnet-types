{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://baclib.github.io/if-is-extensible.json",
    "title": "BAClib If-Is-Extensible Applicator",
    "if": {
        "properties": {
            "base": {
                "enum": [
                    "bitstring",
                    "enumerated",
                    "choice"
                ]
            }
        }
    },
    "then": {
        "properties": {
            "extensible": {
                "type": "boolean",
                "description": "Indicates whether the enumerated type is extensible, allowing for additional values beyond those explicitly defined."
            },
            "range": {
                "$ref": "./non-negative-integer-range.json"
            },
            "ranges": {
                "type": "array",
                "description": "Optional array of ranges defining valid value segments for the enumerated type.",
                "items": {
                    "type": "object",
                    "properties": {
                        "custom": {
                            "type": "boolean",
                            "description": "Indicates if this range is for custom (user-defined) values."
                        },
                        "minimum": {
                            "type": "integer",
                            "minimum": 0,
                            "description": "The minimum value of the range (inclusive)."
                        },
                        "maximum": {
                            "type": "integer",
                            "minimum": 0,
                            "description": "The maximum value of the range (inclusive)."
                        }
                    },
                    "required": [
                        "custom",
                        "minimum",
                        "maximum"
                    ]
                }
            }
        }
    }
}