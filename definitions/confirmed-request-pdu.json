    "alias": "BACnet-Confirmed-Request-PDU",
    "name": "confirmed-request-pdu",
    "description": "Represents a BACnet Confirmed Request Protocol Data Unit (PDU) for services requiring acknowledgment.",
    "type": {
        "base": "sequence",
        "fields": [
            {
                "name": "pdu-type",
                "type": {
                    "base": "unsigned",
                    "minimum": 0,
                    "maximum": 15
                },
                "context": 0,
                "description": "The PDU type identifier (0 for BACnet-Confirmed-Request-PDU)."
            },
            {
                "name": "segmented-message",
                "type": "boolean",
                "context": 1,
                "description": "Indicates whether this is a segmented message."
            },
            {
                "name": "more-follows",
                "type": "boolean",
                "context": 2,
                "description": "Indicates whether more segments follow this one."
            },
            {
                "name": "segmented-response-accepted",
                "type": "boolean",
                "context": 3,
                "description": "Indicates whether the sender can accept a segmented response."
            },
            {
                "name": "reserved",
                "type": {
                    "base": "unsigned",
                    "minimum": 0,
                    "maximum": 3
                },
                "context": 4,
                "description": "Reserved field, must be zero."
            },
            {
                "name": "max-segments-accepted",
                "type": {
                    "base": "unsigned",
                    "minimum": 0,
                    "maximum": 7
                },
                "context": 5,
                "description": "The maximum number of segments the sender can accept in a response."
            },
            {
                "name": "max-apdu-length-accepted",
                "type": {
                    "base": "unsigned",
                    "minimum": 0,
                    "maximum": 15
                },
                "context": 6,
                "description": "The maximum APDU length the sender can accept."
            },
            {
                "name": "invoke-id",
                "type": {
                    "base": "unsigned",
                    "minimum": 0,
                    "maximum": 255
                },
                "context": 7,
                "description": "The invoke ID for matching requests with responses."
            },
            {
                "name": "sequence-number",
                "type": {
                    "base": "unsigned",
                    "minimum": 0,
                    "maximum": 255
                },
                "context": 8,
                "optional": true,
                "description": "The sequence number for segmented messages. Optional."
            },
            {
                "name": "proposed-window-size",
                "type": {
                    "base": "unsigned",
                    "minimum": 1,
                    "maximum": 127
                },
                "context": 9,
                "optional": true,
                "description": "The proposed window size for segmented messages. Optional."
            },
            {
                "name": "service-choice",
                "type": "confirmed-service-choice",
                "context": 10,
                "description": "The confirmed service being requested."
            },
            {
                "name": "service-request",
                "type": "confirmed-service-request",
                "context": 11,
                "optional": true,
                "description": "The service request parameters. Optional."
            }
        ]
    }
}
