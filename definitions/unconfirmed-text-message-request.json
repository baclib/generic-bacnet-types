    "alias": "UnconfirmedTextMessage-Request",
    "name": "unconfirmed-text-message-request",
    "description": "Represents a BACnet unconfirmed text message request, used to send text messages to operator displays without requiring acknowledgment.",
    "type": {
        "base": "sequence",
        "fields": [
            {
                "name": "text-message-source-device",
                "type": "object-identifier",
                "context": 0,
                "description": "The identifier of the device sending the text message."
            },
            {
                "name": "message-class",
                "type": {
                    "base": "choice",
                    "options": [
                        {
                            "name": "numeric",
                            "type": "unsigned",
                            "context": 0,
                            "description": "A numeric message class identifier."
                        },
                        {
                            "name": "character",
                            "type": "character-string",
                            "context": 1,
                            "description": "A character string message class identifier."
                        }
                    ]
                },
                "context": 1,
                "optional": true,
                "description": "Optional message class, either numeric or character string."
            },
            {
                "name": "message-priority",
                "type": {
                    "base": "enumerated",
                    "values": [
                        {
                            "name": "normal",
                            "constant": 0,
                            "description": "Normal priority message."
                        },
                        {
                            "name": "urgent",
                            "constant": 1,
                            "description": "Urgent priority message."
                        }
                    ]
                },
                "context": 2,
                "description": "The priority of the text message."
            },
            {
                "name": "message",
                "type": "character-string",
                "context": 3,
                "description": "The text message content."
            }
        ]
    }
}
