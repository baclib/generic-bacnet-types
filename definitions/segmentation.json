    "alias": "BACnetSegmentation",
    "name": "segmentation",
    "description": "Enumerates the BACnet segmentation capabilities, indicating support for segmented transmission and/or reception.",
    "type": {
        "base": "enumerated",
        "values": [
            {
                "name": "segmented-both",
                "constant": 0,
                "description": "Supports both segmented transmission and reception."
            },
            {
                "name": "segmented-transmit",
                "constant": 1,
                "description": "Supports only segmented transmission."
            },
            {
                "name": "segmented-receive",
                "constant": 2,
                "description": "Supports only segmented reception."
            },
            {
                "name": "no-segmentation",
                "constant": 3,
                "description": "Does not support segmentation."
            }
        ]
    }
}
