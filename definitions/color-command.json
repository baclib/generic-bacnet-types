{
    "alias": "BACnetColorCommand",
    "name": "color-command",
    "type": {
        "base": "sequence",
        "fields": [
            {
                "name": "operation",
                "type": "color-operation",
                "context": 0
            },
            {
                "name": "target-color",
                "type": "xy-color",
                "context": 1,
                "optional": true
            },
            {
                "name": "target-color-temperature",
                "type": "unsigned",
                "context": 2,
                "optional": true
            },
            {
                "name": "fade-time",
                "type": {
                    "base": "unsigned",
                    "minimum": 100,
                    "maximum": 86400000
                },
                "context": 3,
                "optional": true
            },
            {
                "name": "ramp-rate",
                "type": {
                    "base": "unsigned",
                    "minimum": 1,
                    "maximum": 30000
                },
                "context": 4,
                "optional": true
            },
            {
                "name": "step-increment",
                "type": {
                    "base": "unsigned",
                    "minimum": 1,
                    "maximum": 30000
                },
                "context": 5,
                "optional": true
            }
        ]
    }
}