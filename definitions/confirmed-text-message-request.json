{
    "alias": "ConfirmedTextMessage-Request",
    "name": "confirmed-text-message-request",
    "description": "Request parameters for the ConfirmedTextMessage service, used to send text messages that require acknowledgment.",
    "type": {
        "base": "sequence",
        "fields": [
            {
                "name": "text-message-source-device",
                "type": "object-identifier",
                "context": 0,
                "description": "The identifier of the device sending the text message."
            },
            {
                "name": "message-class",
                "type": {
                    "base": "choice",
                    "options": [
                        {
                            "name": "numeric",
                            "type": "unsigned",
                            "context": 0,
                            "description": "A numeric message class identifier."
                        },
                        {
                            "name": "character",
                            "type": "character-string",
                            "context": 1,
                            "description": "A character string message class identifier."
                        }
                    ]
                },
                "context": 1,
                "optional": true,
                "description": "An optional classification for the message."
            },
            {
                "name": "message-priority",
                "type": {
                    "base": "enumerated",
                    "values": [
                        {
                            "name": "normal",
                            "constant": 0,
                            "description": "Normal priority message."
                        },
                        {
                            "name": "urgent",
                            "constant": 1,
                            "description": "Urgent priority message."
                        }
                    ]
                },
                "context": 2,
                "description": "The priority level of the message."
            },
            {
                "name": "message",
                "type": "character-string",
                "context": 3,
                "description": "The text content of the message."
            }
        ]
    }
}